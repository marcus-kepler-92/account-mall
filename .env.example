# Database
DATABASE_URL="postgresql://johndoe:randompassword@localhost:5432/mydb"

# Database (Docker Compose)
POSTGRES_USER="johndoe"
POSTGRES_PASSWORD="randompassword"
POSTGRES_DB="mydb"

# Better Auth
BETTER_AUTH_SECRET="your-secret-key-at-least-32-characters-long"
BETTER_AUTH_URL="http://localhost:3000"

# Email (Resend: restock + order completion)
RESEND_API_KEY="re_xxxx"
EMAIL_FROM="Account Mall <noreply@yourdomain.com>"

# Seed (admin account created by db:seed)
ADMIN_EMAIL="admin@yourdomain.com"

# Alipay (optional; leave empty to disable payment)
ALIPAY_APP_ID=""
ALIPAY_PRIVATE_KEY=""
ALIPAY_PUBLIC_KEY=""

# Cron (Vercel Cron invokes /api/cron/close-expired-orders; set CRON_SECRET to secure)
CRON_SECRET=""
# Pending order timeout in ms (default 15 min)
PENDING_ORDER_TIMEOUT_MS=900000
